[core]
	excludesfile = ~/.gitignore_global
[init]
    defaultBranch = main
[alias]
	unstage = reset HEAD --
	discard = checkout --
	co = checkout
	ci = commit
	last = log -1 HEAD
    st = status
    fixup = commit --amend --no-edit
    ll = log --format='format:%Cred%h %Cgreen%ai %Cblue%an %Creset%s'
[advice]
    skippedCherryPicks = false
[delta]
    light = true
    side-by-side = true
[include]
    path = .gitconfig.group
